<div class="card my-auto mx-auto col-12 col-md-10 col-lg-8">
  <div class="card-body col-md-12 col-lg-8 mx-auto">
    <h1 class="card-title">Login</h1>
    <form>
      <div class="mb-3">
        <p class="text-danger d-hidden my-3 small" id="errorMsg">Incorrect email or password. Please try again.</p>
        <label for="user_name" class="form-label">Username</label>
        <input name="user_name" type="text" class="form-control" id="user_name">
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input name="password" type="password" class="form-control" id="password" aria-describedby="passwordHelp">
      </div>
      <div class="d-flex align-center my-4">
        <button type="button" class="btn btn-warning mx-auto col-12 col-md-6 col-lg-4" id="login">Login</button>
      </div>
      <div class="d-flex align-center my-4">
        <a href="/createaccount" class="createAccount mx-auto text-center">OR, click here to create an account!</a>
      </div>
    </form>
  </div>
</div>
<script src="/js/login.js"></script>